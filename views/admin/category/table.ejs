<table class="datatable table table-bordered table-hover">
  <thead>
    <tr>
      <th>#</th>
      <th>Nama</th>
      <th>Aksi</th>
    </tr>
  </thead>
  <tbody>
    <% category.forEach((c, i) => { %>
    <tr>
      <td><%= ++i %></td>
      <td><%= c.name %></td>
      <td>
        <form action="/category/<%= c._id %>?_method=DELETE" method="post">
          <a href="/category/<%= c._id %>/edit" class="btn btn-info btn-sm">
            <i class="fas fa-pencil-alt mr-1"></i>
            Edit
          </a>
          <button class="btn btn-danger btn-sm">
            <i class="fas fa-trash-alt mr-1"></i>
            Hapus
          </button>
        </form>
      </td>
    </tr>
    <% }) %>
  </tbody>
</table>
