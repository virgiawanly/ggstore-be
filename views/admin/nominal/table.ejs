<table class="datatable table table-bordered table-hover">
  <thead>
    <tr>
      <th>#</th>
      <th>Nama Koin</th>
      <th>Jumlah Koin</th>
      <th>Harga Koin</th>
      <th>Aksi</th>
    </tr>
  </thead>
  <tbody>
    <% nominal.forEach((n, i) => { %>
    <tr>
      <td><%= ++i %></td>
      <td><%= n.coinName %></td>
      <td><%= n.coinQuantity %></td>
      <td><%= n.price %></td>
      <td>
        <form action="/nominal/<%= n._id %>?_method=DELETE" method="post">
          <a href="/nominal/<%= n._id %>/edit" class="btn btn-info btn-sm">
            <i class="fas fa-pencil-alt mr-1"></i>
            Edit
          </a>
          <button class="btn btn-danger btn-sm">
            <i class="fas fa-trash-alt mr-1"></i>
            Hapus
          </button>
        </form>
      </td>
    </tr>
    <% }) %>
  </tbody>
</table>
