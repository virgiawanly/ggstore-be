<% include ../../partials/header.ejs %>

<!-- Navbar -->
<% include ../../partials/navbar.ejs %>
<!-- /.navbar -->

<!-- Main Sidebar Container -->
<% include ../../partials/sidebar.ejs %>

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Edit Nominal</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="/nominal">Nominal</a></li>
            <li class="breadcrumb-item active">Edit Nominal</li>
          </ol>
        </div>
      </div>
    </div>
    <!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
          <div class="card card-primary">
            <div class="card-header">
              <h3 class="card-title">
                Form Edit Nominal '<%= nominal.coinName %>'
              </h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <form action="/nominal/<%= nominal._id %>?_method=PUT" method="post">
              <div class="card-body">
                <div class="form-group">
                  <label>Nama Koin</label>
                  <select
                    class="form-control select2"
                    style="width: 100%"
                    name="coinName"
                    required
                  >
                    <option>Pilih Koin</option>
                    <option value="Gold" <% if (nominal.coinName == 'gold') { %>
                      selected <% } %>> Gold
                    </option>
                    <option value="Diamond" <% if (nominal.coinName == 'diamond') { %>
                      selected <% } %>>Diamond
                    </option>
                    <option value="Gems" <% if (nominal.coinName == 'gem') { %>
                      selected <% } %>>Gems
                    </option>
                    <option value="Point" <% if (nominal.coinName == 'point') { %>
                      selected <% } %>>Point
                    </option>
                  </select>
                </div>
                <div class="form-group">
                  <label for="coinQuantity">Jumlah Koin</label>
                  <input
                    type="number"
                    class="form-control"
                    id="coinQuantity"
                    name="coinQuantity"
                    placeholder="Masukan jumlah koin"
                    value="<%= nominal.coinQuantity %>"
                    required
                  />
                </div>
                <div class="form-group">
                  <label for="price">Harga</label>
                  <input
                    type="number"
                    class="form-control"
                    id="price"
                    name="price"
                    placeholder="Masukan harga"
                    value="<%= nominal.price %>"
                    required
                  />
                </div>
              </div>
              <!-- /.card-body -->
              <div class="card-footer">
                <button type="submit" class="btn btn-primary">Simpan</button>
              </div>
            </form>
          </div>
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>

<% include ../../partials/footer.ejs %>
