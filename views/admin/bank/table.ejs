<table class="datatable table table-bordered table-hover">
  <thead>
    <tr>
      <th>#</th>
      <th>Nama</th>
      <th>Nama Bank</th>
      <th>No. Rekening</th>
      <th>Aksi</th>
    </tr>
  </thead>
  <tbody>
    <% bank.forEach((b, i) => { %>
    <tr>
      <td><%= ++i %></td>
      <td><%= b.name %></td>
      <td><%= b.bankName %></td>
      <td><%= b.noRekening %></td>
      <td>
        <form action="/bank/<%= b._id %>?_method=DELETE" method="post">
          <a href="/bank/<%= b._id %>/edit" class="btn btn-info btn-sm">
            <i class="fas fa-pencil-alt mr-1"></i>
            Edit
          </a>
          <button class="btn btn-danger btn-sm">
            <i class="fas fa-trash-alt mr-1"></i>
            Hapus
          </button>
        </form>
      </td>
    </tr>
    <% }) %>
  </tbody>
</table>
